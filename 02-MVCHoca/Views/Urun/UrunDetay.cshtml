@model Urun

@{
    ViewData["Title"] = "UrunDetay";
}

<h1>Ürün Detayı</h1>

<p>
    <a asp-action="UrunEkle" class="btn btn-success">Yeni Ürün Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>Ürün ID</th>
        <td>@Model.UrunID</td>
    </tr>
    <tr>
        <th>Ürün Adı</th>
        <td>@Model.UrunAdi</td>
    </tr>
    <tr>
        <th>Fiyat</th>
        <td>@Model.Fiyat</td>
    </tr>
    <tr>
        <th>Resim</th>
        <td>
            <img src="~/Resimler/@Model.Resim" width="150" height="100" />
        </td>
    </tr>
    <tr>
        <th>Açıklama</th>
        <td>@Model.Aciklama</td>
    </tr>
    <tr>
        <th>Kategori</th>
        <td>@Model.Kategori?.KategoriAdi</td>
    </tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.UrunID" class="btn btn-warning btn-sm">Düzenle</a>
<a asp-action="Delete" asp-route-id="@Model.UrunID" class="btn btn-danger btn-sm">Sil</a>