@model IEnumerable<_02_MVCHoca.Models.Urun>

@{
    ViewData["Title"] = "Index";
}

<h1>Ürünler</h1>

<p>
    <a asp-action="UrunEkle" class="btn btn-success">Yeni Ürün Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Resim</th>
            <th>Açıklama</th>
            <th>Kategori</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UrunID</td>
                <td>@item.UrunAdi</td>
                <td>@item.Fiyat</td>
                <td>
                    <img src="~/Resimler/@item.Resim" alt="Resim" width="150" height="100" />
                </td>
                <td>@item.Aciklama</td>
                <td>@item.Kategori?.KategoriAdi</td> @* Navigation property varsa gösterir *@
                <td>
                    <a asp-action="Guncelle" asp-route-id="@item.UrunID" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="UrunDetay" asp-route-id="@item.UrunID" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Sil" asp-route-id="@item.UrunID" onclick="return confirm('Emin misiniz?')" class="btn btn-danger btn-sm">Sil</a>

                </td>
            </tr>
        }
    </tbody>
</table>
