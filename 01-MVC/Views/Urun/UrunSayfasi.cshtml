
<p>
    <a asp-action="UrunEkle">Yeni Ürün Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td>@urun.UrunID</td>
                <td>@urun.UrunAdi</td>
                <td>@urun.Fiyat TL</td>
            </tr>
        }
    </tbody>
</table>

