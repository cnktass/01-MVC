@model _01_MVC.Models.Urun


<h1>Yeni Ürün Ekle</h1>

<form method="post" asp-action="UrunEkle">
    <div class="form-group">
        <label for="UrunAdi">Ürün Adı</label>
        <input type="text" class="form-control" id="UrunAdi" asp-for="UrunAdi" />
    </div>

    <div class="form-group">
        <label for="Fiyat">Fiyat</label>
        <input type="text" class="form-control" id="Fiyat" asp-for="Fiyat" />
    </div>

    <button type="submit" class="btn btn-primary">Ürün Ekle</button>
</form>
